#!/usr/bin/env php
<?php
namespace jpuck\dbdtp;
if(file_exists(__DIR__.'/../../../autoload.php')){
	require_once __DIR__.'/../../../autoload.php';
} else {
	require_once __DIR__.'/../vendor/autoload.php';
}

use Symfony\Component\Console\Application;

set_error_handler([ErrorHandler::class,'exceptionalizer']);

$logo = '
                      _ _
  _ __ ___  _   _  __| | |_ _ __
 | \'_ ` _ \| | | |/ _` | __| \'_ \
 | | | | | | |_| | (_| | |_| |_) |
 |_| |_| |_|\__, |\__,_|\__| .__/
            |___/          |_|

PDO connections for MySQL
Development, Test, & Production
';

// ASCII art logo:
// http://www.patorjk.com/software/taag/#p=display&f=Ivrit&t=dbdtp

$app = new Application($logo,'2.0-dev');

$app->add(new Create);
$app->add(new Drop);
$app->add(new Execute);
$app->add(new Purge);

$app->run();
